<div class="container-fluid">
  <div class="panel panel-body">
    <div class="panel panel-heading">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">Deck Center</h3>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <div class="tab-content">
          <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="btn btn-success new-deck-button" href="/deck/new">New Deck</a>
            <% @decks.each do |deck| %>
              <%= render partial: 'deck/deck_title', locals: { deck: deck } %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-9">
        <div class="tab-content">
          <div class="tab-content" id="v-pills-tabContent">
            <% @decks.each do |deck| %>
              <%= render partial: 'deck/deck_details', locals: { deck: deck } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>