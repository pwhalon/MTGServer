<a class="nav-link <%= @decks.first == deck ? 'active' : '' %>" id="v-pills-<%= deck.id %>-tab" data-toggle="pill" href="#v-pills-<%= deck.id %>" role="tab" aria-controls="v-pills-<%= deck.id %>" aria-selected="true">
  <%= deck.name %>

  <button class="btn btn-sm btn-danger float-right" data-toggle="modal" data-target="#confirmationModal-<%= deck.id %>">
    Delete
  </button>
</a>

<div class="modal fade" id="confirmationModal-<%= deck.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteDeckLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Deletion Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Woah there Cowboy! Are you sure you want to delete your <%= deck.name %> deck?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No Keep the Deck</button>
        <a class="btn btn-danger" href="/deck/delete/<%= deck.id%>">Delete Deck!</a>
      </div>
    </div>
  </div>
</div>