<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Name</th>
      <th>Box</th>
    </tr>
  </thead>
  <tbody>
    <% if @matching_cards.present? %>
      <% @matching_cards.zip(@deck_entries).each do |card, entries| %>
        <tr class="clickable" data-toggle="collapse" data-target="#<%= card.name.gsub(' ', '') %><%= card.box %>">
          <td><%= card.quantity %> x </td>
          <td><%= card.name %></td>
          <td><%= card.box %></td>
        </tr>
        <% if entries.present? %>
          <% entries.each do |entry| %>
            <tr class="collapse" id="<%= card.name.gsub(' ', '') %><%= card.box %>">
              <td><%= entry.quantity %> â€¢</td>
              <td><%= entry.deck.name %></td>
            </tr>
          <% end %>
        <% else %>
          <tr class="collapse" id="<%= card.name.gsub(' ', '') %><%= card.box %>"><td>None in use</td></tr>
        <% end %>
      <% end %>
    <% else %>
      <tr>
        <td>
          No results
        </td>
      </tr>
    <% end %>
  </tbody>
</table>